   "source": [
    "num = list(input(\"Input a binary number: \"))\n",
    "x = 0\n",
    "\n",
    "for i in range(len(num)):\n",
    "\tdigit = num.pop()\n",
    "\tif digit == '1':\n",
    "\t\tx = x + pow(2, i)\n",
    "print(\"The decimal value of the number is\", x)"
   ]
